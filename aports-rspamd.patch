+		-DCMAKE_INSTALL_PREFIX=/usr \
+		-DCONFDIR=/etc/$pkgname \
+		-DRUNDIR=/run/$pkgname \
+		-DRSPAMD_USER=$pkgusers \
+		-DRSPAMD_GROUP=$pkggroups \
+		-DENABLE_LUAJIT=ON \
+		-DENABLE_STATIC=ON \
+		-DENABLE_PCRE2=ON \
+		-DENABLE_HYPERSCAN=ON \
+		-DHYPERSCAN_ROOT_DIR=/home/abuild/hyperscan \
