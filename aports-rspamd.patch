+	mv "$pkgdir"/usr/bin/rspamd-$pkgver "$pkgdir"/usr/sbin/rspamd
+	mv "$pkgdir"/usr/bin/rspamadm-$pkgver "$pkgdir"/usr/bin/rspamadm
+	mv "$pkgdir"/usr/bin/rspamc-$pkgver "$pkgdir"/usr/bin/rspamc
+	rm -rf "$pkgdir"/usr/share/man
+}
